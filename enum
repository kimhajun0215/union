#include <stdio.h>

 

// 열거형 정의

enum Days {

    SUNDAY,    // 0

    MONDAY,    // 1

    TUESDAY,   // 2

    WEDNESDAY, // 3

    THURSDAY,  // 4

    FRIDAY,    // 5

    SATURDAY   // 6

};

 

int main() {

    // 열거형 변수 선언 및 초기화

    enum Days today = WEDNESDAY;

 

    // 현재 요일 출력

    switch (today) {

        case SUNDAY:

            printf("오늘은 일요일입니다.\n");

            break;

        case MONDAY:

            printf("오늘은 월요일입니다.\n");

            break;

        case TUESDAY:

            printf("오늘은 화요일입니다.\n");

            break;

        case WEDNESDAY:

            printf("오늘은 수요일입니다.\n");

            break;

        case THURSDAY:

            printf("오늘은 목요일입니다.\n");

            break;

        case FRIDAY:

            printf("오늘은 금요일입니다.\n");

            break;

        case SATURDAY:

            printf("오늘은 토요일입니다.\n");

            break;

        default:

            printf("요일을 알 수 없습니다.\n");

            break;

    }

 

    return 0;

}
